{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/@types/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/"
  ]
}
